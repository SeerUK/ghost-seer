<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    {{#if post}}
        <title>{{meta_title}} &bullet; {{@blog.title}}</title>
    {{/if}}

    {{#unless post}}
        <title>{{meta_title}}</title>
    {{/unless}}

    <link href="https://fonts.googleapis.com/css?family=Fira+Mono:400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.typekit.net/vtf7gda.css">

    <% for (var css in htmlWebpackPlugin.files.css) { %>
    <link href="{{asset "<%= htmlWebpackPlugin.files.css[css] %>" }}" rel="stylesheet">
    <% } %>

    {{ghost_head}}
</head>

{{#if post}}
    <body class="{{body_class}} {{#post}}{{post_class}} {{#if feature_image}}post-template-featured{{/if}}{{/post}}">
{{/if}}
{{#unless post}}
    <body class="{{body_class}}">
{{/unless}}
    {{{body}}}

    <% for (var chunk in htmlWebpackPlugin.files.chunks) { %>
    <script src="{{asset "<%= htmlWebpackPlugin.files.chunks[chunk].entry %>" }}"></script>
    <% } %>

    {{ghost_foot}}
</body>
</html>
