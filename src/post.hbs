{{!< default}}

{{> "nav"}}

{{#post}}

    <main class="gs-post {{post_class}}">
        <header class="gs-post-header">
            <h1 class="gs-post-header__title">
                {{title}}
            </h1>

            <div class="gs-post-header__meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">
                    {{date format="DD MMM, YYYY"}}
                </time>
                {{#if tags}}
                    in {{tags}}
                {{/if}}
            </div>
        </header>

        {{#if feature_image}}

            <section class="gs-post-image">
                <img src="{{img_url feature_image}}" alt="{{title}}">
            </section>

        {{/if}}

        <article class="gs-post-content">
            {{content}}
        </article>
    </main>

    {{#next_post}}

        <div class="gs-post-navigation gs-post-navigation__next">
            <a href="{{url}}">
                Next post
            </a>
        </div>

    {{/next_post}}

    {{#prev_post}}

        <div class="gs-post-navigation gs-post-navigation__prev">
            <a href="{{url}}">
                Prev post
            </a>
        </div>

    {{/prev_post}}

    {{#get "posts" filter="tags:{{primary_tag.slug}}+id:-{{id}}" limit="5" order="published_at desc" as |related_posts|}}
        {{#if related_posts}}

            <section class="gs-related">
                <div class="gs-related__wrapper">
                    <h4>
                        More posts in
                        <a href="{{@blog.url}}/tag/{{../primary_tag.slug}}/">
                            {{../primary_tag.name}}
                        </a>
                    </h4>

                    {{#foreach related_posts}}

                        <article class="gs-related__item {{post_class}}">
                            <a href="{{url}}">{{title}}</a>
                            <time datetime="{{date format="YYYY-MM-DD"}}">
                                {{date format="DD MMM, YYYY"}}
                            </time>
                        </article>

                    {{/foreach}}
                </div>
            </section>

        {{/if}}
    {{/get}}

{{/post}}

{{> "footer"}}
